<%= render "layouts/notice", book: @book %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
        <%= form_with model: @book, method: :patch do |f| %>
         <div class="form-group">
           <label for="inputTitle">Title</label>
          <div><%= f.text_field :title, autofocus: true, id:"inputTitle" , class: "form-control book_body" %></div>
         </div>
          <div class="form-group">
            <label for="inputbody">Opnion</label>
            <div><%= f.text_area :body, id:"inputbody" , class: "form-control book_body" %></div>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book" , class: "btn btn-success" %>
          </div>
        <% end %>

     <%= link_to "Show", book_path(@book)  %>
     <%= link_to "Back", books_path  %>
    </div>
  </div>
</div>
