<p id="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render "users/user_info", user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
         <th></th>
          <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag @book.user.get_profile_image(100,100) %><br /></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id) , class: "btn btn-sm btn-success " %></td>
            <td><%= button_to "Destroy", book_path(@book.id), method: :delete %></td>
          <% end %>
        </tr>
    </table>

    </div>

  </div>

</div>
