<h2>User Info</h2>
<%= image_tag user.get_profile_image(100,100) %>

<table class="table">
  <tbody>

        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
         <tr>
          <th>Introduction</th>
          <th><%= user.introduction %></th>

        </tr>
  </tbody>
</table>


<div class="row">

  <%= link_to  edit_user_path(current_user.id), class: "btn btn-block btn-secondary" do %>
  <i class=" fas fa-user-cog "></i>
  <% end %>
</div>
<div class="row">

</div>



<h2 class="mt-3">New book</h2>

<%= form_with model: Book do |f| %>
<div class="form-group">
<label for="book_title">Title</label>
<div><%= f.text_field :title %></div>
</div>

<div class="form-group">
<label for="book-opinion">Opnion</label>
<div><%= f.text_area :body %></div>
</div>

<div class="form-group">
<%= f.submit "Cretae Book", class: "btn btn-success " %>
</div>
<% end %>
