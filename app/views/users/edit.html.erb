
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <p id="notice"><%= flash[:notice] %></p>
          <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
          <% end %>
        <%= form_with model: @user, method: :patch do |f| %>
         <div class="form-group">
           <label for="inputName">Name</label>
          <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
         </div>
         <div class="form-group">
           <label for="inputImage">ProfileImage</label>
           <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
          </div>
          <div class="form-group">
            <label for="inputIntroduction">Introduction</label>
            <div><%= f.text_area :introduction, id:"inputIntroduction", placeholder:"自己紹介"%></div>
          </div>
          <div class="form-group">
            <%= f.submit "Update User" %>
          </div>
        <% end %>
    </div>
  </div>
</div>



